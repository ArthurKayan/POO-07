class Curso {
    private String nomeCurso;
    private String nivel;
    private int cargaHoraria;
    private String LinguagemPrograma;


    // Construtor
    public Curso(String nomeCurso, String nivel, int cargaHoraria, String LinguagemPrograma) {
        this.nomeCurso = nomeCurso;
        this.nivel = nivel;
        this.cargaHoraria = cargaHoraria;
        this.LinguagemPrograma = LinguagemPrograma;
    }

    // Métodos getters
    public String getNome() {
        return nomeCurso;
    }

    public String getNivel() {
        return nivel;
    }

    public int getCargaHoraria() {
        return cargaHoraria;
    }

    public String getLinguagemPrograma() {
        return LinguagemPrograma;
    }

    // Método para validar carga horária
    public boolean cargaHorariaValida() {
        return cargaHoraria > 0;
    }

    // Método para exibir informações
    public void exibirInformacoes() {
        System.out.println("Curso: " + nomeCurso);
        System.out.println("Nível: " + nivel);
        System.out.println("Carga Horária: " + cargaHoraria + " horas");
        System.out.println("Linguagem de programação:" + LinguagemPrograma);
    }
}




//Com ajuda da IA
public class Curso {
    private String nome;
    private String nivel;
    private int cargaHoraria;
    private String linguagem;

    public Curso(String nome, String nivel, int cargaHoraria, String linguagem) {
        this.nome = nome;
        this.nivel = nivel;
        this.cargaHoraria = cargaHoraria;
        this.linguagem = linguagem;
    }

    public boolean cargaHorariaValida() {
        return cargaHoraria == 120 || cargaHoraria == 240 || cargaHoraria == 360;
    }

    public void exibirInformacoes() {
        System.out.println("Curso: " + nome);
        System.out.println("Nível: " + nivel);
        System.out.println("Carga Horária: " + cargaHoraria);
        System.out.println("Linguagem: " + linguagem);
    }
}
